<article class="menu-target1">
    <h3>Grid & Fluid</h3>

    <table class="table">
        <caption>Grid & Fluid</caption>

        <thead>
        <tr>
            <th>Class</th>
            <th>Property</th>
            <th>Variable</th>
            <th>Media</th>
            <th>Concat</th>
            <th>State</th>
        </tr>
        </thead>

        <tbody>
        {% for fluid in allFluidClasses %}
            <tr>
                <th>{{ fluid.class }}</th>
                <td>{{ fluid.property }}</td>
                <td>{{ fluid.variable }}</td>
                <td>{{ fluid.media|replace({'1': "yes", '0': "no"}) }}</td>
                <td>{{ fluid.concat|replace({'1': "yes", '0': "no"}) }}</td>
                <td>{{ fluid.state|replace({'1': "yes", '0': "no"}) }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</article>
