<article class="menu-target1">
    <h3>Grid & Fluid</h3>

    <table class="table">
        <caption>Grid & Fluid</caption>

        <thead>
        <tr>
            <th>Class</th>
            <th>Property</th>
            <th><a href="{{ url('global') }}" title="How to use Variables ?">Variable</a></th>
            <th>@media</th>
            <th><a href="{{ url('grid') }}" title="How to Concat ?">Concat</a></th>
            <th><a href="{{ url('states') }}" title="How States work ?">States</a></th>
        </tr>
        </thead>

        <tbody>
        {% for fluid in allFluidClasses %}
            <tr>
                <th>{{ fluid.class }}</th>
                <td>{{ fluid.property }}</td>
                <td>{{ fluid.variable }}</td>
                <td>{{ fluid.media|replace({'1': "yes", '0': "no"}) }}</td>
                <td>{{ fluid.concat|replace({'1': "yes", '0': "no"}) }}</td>
                <td>{{ fluid.state|replace({'1': "yes", '0': "no"}) }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</article>
