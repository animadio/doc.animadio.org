<article class="menu-target2">
    <h3>Flex</h3>

    <table class="table">
        <caption>Flex</caption>

        <thead>
        <tr>
            <th>Class</th>
            <th>Property</th>
            <th>Variable</th>
            <th>Media</th>
            <th>Concat</th>
            <th>State</th>
        </tr>
        </thead>

        <tbody>
        {% for flex in allFlexClasses %}
            <tr>
                <th>{{ flex.class }}</th>
                <td>{{ flex.property }}</td>
                <td>{{ flex.variable }}</td>
                <td>{{ flex.media|replace({'1': "yes", '0': "no"}) }}</td>
                <td>{{ flex.concat|replace({'1': "yes", '0': "no"}) }}</td>
                <td>{{ flex.state|replace({'1': "yes", '0': "no"}) }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</article>
