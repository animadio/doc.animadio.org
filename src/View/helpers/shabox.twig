<article class="menu-target5">
    <h4>Shabox</h4>

    <section class="card-gray">
        <h5>Shabox</h5>
        <p>Shabox classes are made to provide box shadows, add global to use for children !</p>
        <a class="btn-gray" href="https://github.com/animadio/animadio/blob/master/src/helpers" title="View SCSS Source @GitHub" rel="noreferrer noopener" target="_blank">
            <i class="fab fa-css3 fa-lg" aria-hidden="true"></i>
        </a>
    </section>

    <table class="table">
        <caption>Shabox Datas</caption>

        <thead>
        <tr>
            <th>Class</th>
            <th>Property</th>
            <th>Value</th>
            <th>Screen</th>
            <th>Concat</th>
        </tr>
        </thead>

        <tbody>
        {% for shabox in allShaboxClasses %}
            <tr>
                <th>{{ shabox.class }}</th>
                <td>{{ shabox.property }}</td>
                <td>{{ shabox.valor }}</td>
                <td>{{ shabox.screen }}</td>
                <td>{{ shabox.concat|replace({'1': "yes", '0': "no"}) }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</article>
