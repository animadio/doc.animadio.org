{% extends 'layout/layout.twig' %}

{% block subtitle %}Helpers{% endblock %}

{% block description %}Animadio Documentation about Animadio Helpers : font, align, decoration, shatex, shahelpers & cursor{% endblock %}

{% block main %}

    <article>
        <h2>Helpers</h2>

        <section class="card-purple">
            <figure>
                <img src="img/logo.png" alt="Animadio Logo">
            </figure>
            <h3>Helpers Usage</h3>
            <p>To use Helpers feature, you need to add the Helpers keyword(s) after the Helpers class(es) with a hyphens "-" between them in order to get the desired effect.</p>
            <a class="btn-purple" href="https://cdn.jsdelivr.net/npm/animadio@2.0.3/dist/animadio-helpers.css" title="Access to Animadio Helpers CDN" rel="noreferrer noopener" target="_blank">Helpers CDN</a>
        </section>

        <table class="table">
            <caption>Helpers Datas</caption>

            <thead>
            <tr>
                <th>Keywords</th>
                <th>Trigger</th>
                <th>Relay</th>
                <th>Target</th>
            </tr>
            </thead>

            <tbody>
            <tr>
                <td>&empty;</td>
                <td>Class</td>
                <td>&empty;</td>
                <td>Class</td>
            </tr>
            <tr>
                <td>global</td>
                <td>Global class</td>
                <td>&empty;</td>
                <td>Children of Global class</td>
            </tr>
            </tbody>
        </table>

        <input id="menu-radio1" class="menu-radio1" type="radio" name="menu" checked>
        <input id="menu-radio2" class="menu-radio2" type="radio" name="menu">
        <input id="menu-radio3" class="menu-radio3" type="radio" name="menu">
        <input id="menu-radio4" class="menu-radio4" type="radio" name="menu">
        <input id="menu-radio5" class="menu-radio5" type="radio" name="menu">
        <input id="menu-radio6" class="menu-radio6" type="radio" name="menu">

        <nav class="menu">
            <label for="menu-radio1" title="Show Font Classes">
                Font
                <i class="fas fa-caret-down fa-2x" aria-hidden="true"></i>
            </label>
            <label for="menu-radio2" title="Show Align Classes">
                Align
                <i class="fas fa-caret-down fa-2x" aria-hidden="true"></i>
            </label>
            <label for="menu-radio3" title="Show Decoration Classes">
                Decoration
                <i class="fas fa-caret-down fa-2x" aria-hidden="true"></i>
            </label>
            <label for="menu-radio4" title="Show Shatex Classes">
                Shatex
                <i class="fas fa-caret-down fa-2x" aria-hidden="true"></i>
            </label>
            <label for="menu-radio5" title="Show Shabox Classes">
                Shabox
                <i class="fas fa-caret-down fa-2x" aria-hidden="true"></i>
            </label>
            <label for="menu-radio6" title="Show Cursor Classes">
                Cursor
                <i class="fas fa-caret-down fa-2x" aria-hidden="true"></i>
            </label>
        </nav>

        <section class="menu-relay">
            <h3>Helpers Parts</h3>

            {{ include("helpers/font.twig") }}
            {{ include("helpers/align.twig") }}
            {{ include("helpers/decoration.twig") }}
            {{ include("helpers/shatex.twig") }}
            {{ include("helpers/shabox.twig") }}
            {{ include("helpers/cursor.twig") }}

        </section>
    </article>
{% endblock %}
