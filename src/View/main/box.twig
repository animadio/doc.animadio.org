{% extends 'layout/layout.twig' %}

{% block subtitle %}Box{% endblock %}

{% block description %}Animadio Documentation about Animadio Box : container, margin, border, padding, height & width{% endblock %}

{% block main %}

    <article>
        <h2>Box</h2>

        <section class="card-purple">
            <figure>
                <i class="fas fa-box fa-7x" aria-hidden="true"></i>
            </figure>
            <h3>Box Usage</h3>
            <p>To use Box feature, you need to add the Box keyword(s) after the Box class(es) with a hyphens "-" between them in order to get the desired effect.</p>
            <a class="btn" href="https://cdn.jsdelivr.net/npm/animadio@2.4.0/dist/animadio-box.css" title="Access to Animadio Box CDN" rel="noreferrer noopener" target="_blank">
                <i class="fas fa-server fa-lg color-sky color-blue-into" aria-hidden="true"></i>
            </a>
            <a class="btn" href="https://github.com/animadio/animadio/blob/master/dist/animadio-box.css" title="View CSS Library @GitHub" rel="noreferrer noopener" target="_blank">
                <i class="fab fa-css3 fa-lg color-sky color-blue-into" aria-hidden="true"></i>
            </a>
        </section>

        <table class="table">
            <caption>Box Datas</caption>

            <thead>
            <tr>
                <th>Keywords</th>
                <th>Trigger</th>
                <th>Relay</th>
                <th>Target</th>
            </tr>
            </thead>

            <tbody>
            <tr>
                <td>&empty;</td>
                <td>Class</td>
                <td>&empty;</td>
                <td>Class</td>
            </tr>
            <tr>
                <td>global</td>
                <td>Global class</td>
                <td>&empty;</td>
                <td>Children of Global class</td>
            </tr>
            <tr>
                <td>into</td>
                <td>Hover|Focus the parent of Into class</td>
                <td>&empty;</td>
                <td>Into class</td>
            </tr>
            <tr>
                <td>onto</td>
                <td>Hover|Focus the Onto class</td>
                <td>&empty;</td>
                <td>Onto class</td>
            </tr>
            <tr>
                <td>toall</td>
                <td>Hover|Focus the Toall class</td>
                <td>&empty;</td>
                <td>Children of Toall class</td>
            </tr>
            <tr>
                <td>toone</td>
                <td>Hover|Focus a child of Toone class</td>
                <td>&empty;</td>
                <td>Child of Toone class</td>
            </tr>
            </tbody>
        </table>

        <input id="menu-radio1" class="menu-radio1" type="radio" name="menu" checked>
        <input id="menu-radio2" class="menu-radio2" type="radio" name="menu">
        <input id="menu-radio3" class="menu-radio3" type="radio" name="menu">
        <input id="menu-radio4" class="menu-radio4" type="radio" name="menu">
        <input id="menu-radio5" class="menu-radio5" type="radio" name="menu">
        <input id="menu-radio6" class="menu-radio6" type="radio" name="menu">

        <nav class="menu">
            <label for="menu-radio1" title="Show Container Classes">
                Container
                <i class="fas fa-caret-up fa-2x" aria-hidden="true"></i>
            </label>
            <label for="menu-radio2" title="Show Margin Classes">
                Margin
                <i class="fas fa-caret-up fa-2x" aria-hidden="true"></i>
            </label>
            <label for="menu-radio3" title="Show Border Classes">
                Border
                <i class="fas fa-caret-up fa-2x" aria-hidden="true"></i>
            </label>
            <label for="menu-radio4" title="Show Padding Classes">
                Padding
                <i class="fas fa-caret-up fa-2x" aria-hidden="true"></i>
            </label>
            <label for="menu-radio5" title="Show Height Classes">
                Height
                <i class="fas fa-caret-up fa-2x" aria-hidden="true"></i>
            </label>
            <label for="menu-radio6" title="Show Width Classes">
                Width
                <i class="fas fa-caret-up fa-2x" aria-hidden="true"></i>
            </label>
        </nav>

        <section class="menu-relay">
            <h3>Box Parts</h3>

            {{ include("box/container.twig") }}
            {{ include("box/margin.twig") }}
            {{ include("box/border.twig") }}
            {{ include("box/padding.twig") }}
            {{ include("box/height.twig") }}
            {{ include("box/width.twig") }}

        </section>
    </article>
{% endblock %}
