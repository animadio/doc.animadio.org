<article class="menu-target4">
    <h3>Color</h3>

    <section class="card-black">
        <h4>Color</h4>
        <p>You need to add a state keyword to use the Color classes...</p>
        <a class="btn-white" href="https://github.com/animadio/animadio/blob/master/src/states/color.css">View Color Source Code</a>
    </section>

    <table class="table">
        <caption>Color Datas</caption>

        <thead>
        <tr>
            <th>Class</th>
            <th>Property</th>
            <th><a href="{{ url('global') }}" title="How to use Variables ?">Value</a></th>
            <th>@media</th>
            <th><a href="{{ url('grid') }}" title="How to Concat ?">Concat</a></th>
            <th><a href="{{ url('states') }}" title="How States work ?">States</a></th>
        </tr>
        </thead>

        <tbody>
        {% for color in allColorClasses %}
            <tr>
                <th>{{ color.class }}</th>
                <td>{{ color.property }}</td>
                <td>{{ color.valor }}</td>
                <td>{{ color.screen }}</td>
                <td>{{ color.concat|replace({'1': "yes", '0': "no"}) }}</td>
                <td>{{ color.state|replace({'1': "yes", '0': "no"}) }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</article>
