<article class="menu-target2">
    <h3>BG</h3>

    <section class="card-blue">
        <h4>Bg</h4>
        <p>Bg classes are made to provide background colors, add a states keywords to use it as a special effect !</p>
        <a class="btn-blue" href="https://github.com/animadio/animadio/blob/master/src/states/bg.css" title="View CSS Source @GitHub" rel="noreferrer noopener" target="_blank">
            <i class="fab fa-css3 fa-lg" aria-hidden="true"></i>
        </a>
    </section>

    <table class="table">
        <caption>Bg Datas</caption>

        <thead>
        <tr>
            <th>Class</th>
            <th>Property</th>
            <th>Value</th>
            <th>Screen</th>
            <th>Concat</th>
        </tr>
        </thead>

        <tbody>
        {% for bg in allBgClasses %}
            <tr>
                <th>{{ bg.class }}</th>
                <td>{{ bg.property }}</td>
                <td>{{ bg.valor }}</td>
                <td>{{ bg.screen }}</td>
                <td>{{ bg.concat|replace({'1': "yes", '0': "no"}) }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</article>
