<article class="menu-target5">
    <h4>Deco</h4>

    <section class="card-blue">
        <h5>Deco</h5>
        <p>Deco classes are made to provide text decorations, add a states keywords to use it as a special effect !</p>
        <a class="btn-blue" href="https://github.com/animadio/animadio/blob/master/src/states/deco.css" title="View CSS Source @GitHub" rel="noreferrer noopener" target="_blank">
            <i class="fab fa-css3 fa-lg" aria-hidden="true"></i>
        </a>
    </section>

    <table class="table">
        <caption>Deco Datas</caption>

        <thead>
        <tr>
            <th>Class</th>
            <th>Property</th>
            <th>Value</th>
            <th>Screen</th>
            <th>Concat</th>
        </tr>
        </thead>

        <tbody>
        {% for deco in allDecoClasses %}
            <tr>
                <th>{{ deco.class }}</th>
                <td>{{ deco.property }}</td>
                <td>{{ deco.valor }}</td>
                <td>{{ deco.screen }}</td>
                <td>{{ deco.concat|replace({'1': "yes", '0': "no"}) }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</article>
