<article class="menu-target5">
    <h3>Deco</h3>

    <section class="card">
        <h4>Deco</h4>
        <p>You need to add a state keyword to use the Deco classes...</p>
        <a class="btn" href="https://github.com/animadio/animadio/blob/master/src/states/deco.css">View Deco Source Code</a>
    </section>

    <table class="table">
        <caption>Deco Datas</caption>

        <thead>
        <tr>
            <th>Class</th>
            <th>Property</th>
            <th>Value</th>
            <th>Screen</th>
            <th>Concat</th>
        </tr>
        </thead>

        <tbody>
        {% for deco in allDecoClasses %}
            <tr>
                <th>{{ deco.class }}</th>
                <td>{{ deco.property }}</td>
                <td>{{ deco.valor }}</td>
                <td>{{ deco.screen }}</td>
                <td>{{ deco.concat|replace({'1': "yes", '0': "no"}) }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</article>
