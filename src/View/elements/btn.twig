<article class="menu-target1">
    <h3>Btn | Button</h3>

    <section class="card">
        <h4>Btn Infos</h4>
        <p>You can use Btn classes for links & Button classes for effects !</p>
        <a class="btn" href="https://github.com/animadio/animadio/blob/master/src/elements/btn.css" title="View Btn Source Code" rel="noreferrer noopener" target="_blank">Btn Code</a>
    </section>

    <section>
        <h4>Btn Examples</h4>

        {% for btn in allBtnClasses %}
            {% if btn.class|split('-')|first is same as ('btn') %}

                <h5 class="deco-under">{{ btn.class }} & {{ btn.class|replace({'btn': "button"}) }}</h5>

                <a class="{{ btn.class }}" href="#" title="Your awesome link !">
                    <i class="fas fa-globe" aria-hidden="true"></i>
                    {{ btn.class }}
                </a>

                <pre><span class="color-silver">&lt;</span><span class="color-red">a</span><span class="color-salmon font-italic"> class=</span>"{{ btn.class }}"<span class="color-salmon font-italic"> href=</span>"#"<span class="color-salmon font-italic"> title=</span>"Your awesome link !"<span class="color-silver">&gt;&lt;/</span><span class="color-red">a</span><span class="color-silver">&gt;</span></pre>

            {% else %}
                <input class="{{ btn.class }}-check" id="{{ btn.class }}-check" type="checkbox">
                <label class="{{ btn.class }}" for="{{ btn.class }}-check" title="Your awesome effect !">
                    <i class="fas fa-cogs" aria-hidden="true"></i>
                    {{ btn.class }}
                </label>

                <pre><span class="color-silver">&lt;</span><span class="color-red">input</span><span class="color-salmon font-italic"> class=</span>"button-check"<span class="color-salmon font-italic"> id=</span>"{{ btn.class }}-check"<span class="color-salmon font-italic"> type=</span>"checkbox"<span class="color-silver">&gt;</span></pre>
                <pre><span class="color-silver">&lt;</span><span class="color-red">label</span><span class="color-salmon font-italic"> class=</span>"{{ btn.class }}"<span class="color-salmon font-italic"> for=</span>"{{ btn.class }}-check"<span class="color-salmon font-italic"> title=</span>"Your awesome effect !"<span class="color-silver">&gt;&lt;/</span><span class="color-red">label</span><span class="color-silver">&gt;</span></pre>
            {% endif %}
        {%  endfor %}
    </section>
</article>
